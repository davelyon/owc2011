<%= form_for [:admin, @fundraiser] do |form| %>

  <%= form.label :name %>
  <%= form.text_field :name %>
  <br />
  <%= form.label :start_at %>
  <%= form.datetime_select :start_at %>
  <%= form.label :end_at %>
  <%= form.datetime_select :end_at %>
  <br />
  <%= form.label :description %>
  <%= form.text_area :description, :size => "30x7"%>
  <br />
  <%= form.label :location %>
  <%= form.text_field :location %>
  <br />
  <%= form.label :image %>
  <%= form.text_area :image, :size => "20x7"%>

  <%= form.submit "Save"%>

<% end %>
