<section>
  <%= flash[:notice]%>
  <h1>Sign in</h1>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div style="padding:0 0 1.25em 0;"><%= f.check_box :remember_me, :style=> "margin:0; width:auto;" %> <%= f.label :remember_me, :style => "line-height:1; display:inline;" %></div>
    <% end -%>
    <%= f.submit "Sign in" %>
  <% end %>
</section>
