<%= render 'form_errors', object: @contact_request %>

<%= form_for @contact_request do |f| %>
  <%= f.label :contact_type, "Contact types" %>
  <%= f.select :contact_type, @contact_request.options %>

  <%= f.label :message %>
  <%= f.text_area :message %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :phone, "Phone number" %>
  <%= f.phone_field :phone %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :organization %>
  <%= f.text_field :organization %>

  <%= f.label :title, "Title/Occupation" %>
  <%= f.text_field :title %>

  <%= f.submit "Submit" %>
<% end %>
